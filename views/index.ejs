<!doctype html>
<html>
<head>
    <title>Roulette</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/css2?family=Monoton&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
</head>
<body>
<div class="container">
      <nav class="">

        <img src="" alt="">

        <p class=""> Casino Staff Login:</p>

        <a href="/login" class="btn btn-default"><span class="fa fa-user"></span>Login</a>
      </nav>
  <div class="">
    <section class="titleSec">
      <h1 class="navbar-brand">
        <p class="smallH">The Diamond Casino & Resort presents</p>
        <p class="bigH">Royal Roulette</p>
      </h1>
    </section>
    <section class="betSec">
      <form class="" action="/game" method="post">
        <input id="betAmount" type="text" placeholder="Place Bet" name="" value="">
        <select id="userChoice" class="" name="">
          <option value="red">Red</option>
          <option value="black">Black</option>
        </select>
        <button id="submit" class="btn btn-default" type="button" name="button">Submit</button>
      </form>
    </section>
    <section class="resultSec">
      <div class="bet">
      </div>
      <div id="display">
        <p class="result"></p>
        <p class="moneyTotal"></p>
      </div>
    </section>
  </div>
</div>
</body>

<script src="main.js"></script>
</html>
